---
import Layout from '../../layouts/Layout.astro';
import { getUniqueTags } from '@/data/post';

const tags: string[] = await getUniqueTags();
const pageTitle = "タグインデックス";
---
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>
<Layout pageTitle={pageTitle}>
<div class="tags">
  {tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
  ))}
</div>
</Layout>
